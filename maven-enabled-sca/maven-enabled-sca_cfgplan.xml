      <import>
         <searchReplace>
            <search/>
            <replace/>
         </searchReplace>
      </import>
      <service name="saypdfhello_client_ep">
         <binding type="ws">
            <attribute name="port">
               <replace>http://mmikhail.com/soa11g_maven/maven_enabled_sca/sayPdfHello#wsdl.endpoint(saypdfhello_client_ep/sayPdfHello_pt)</replace>
            </attribute>
         </binding>
      </service>
      <property name="productVersion">
         <replace>11.1.1.7.8</replace>
      </property>
      <!--Add search and replace rules for the component properties
	For components and service/reference bindings, you can add policy references.
	Example:
	<component name="*">
		<wsp:PolicyReference orawsp:category="management" orawsp:status="enabled" URI="oracle/log_policy"/>
	</component>-->
      <component name="sayPdfHello">
         <property name="bpel.config.transaction">
            <replace>required</replace>
         </property>
         <property name="bpel.config.oneWayDeliveryPolicy">
            <replace>async.persist</replace>
         </property>
      </component>
      <reference name="GetPDF">
         <!--Add search and replace rules for the binding properties-->
         <binding type="ws">
            <attribute name="port">
               <replace>http://mmikhail.com/demo/ide/#wsdl.endpoint(fo2PdfService/fo2PdfPort)</replace>
            </attribute>
            <attribute name="location">
               <replace>REPLACE.ME</replace>
            </attribute>
            <property name="weblogic.wsee.wsat.transaction.flowOption">
               <replace>WSDLDriven</replace>
            </property>
         </binding>
      </reference>
      <reference name="DeliverReport">
         <binding type="wsif"/>
      </reference>
   </composite>
